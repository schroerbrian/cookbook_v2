
<ul class="nav nav-pills">
  <li><%= link_to('New Book', new_book_path) %></li>
  <li><%= link_to('Delete Book', @book, :method => :delete, :confirm => 'Are you sure?') %></li>
  <li><%= link_to('Edit Book', edit_book_path(@book)) %></li>
</ul>


<div class="row">
     <div class="span3 offset1">
      <p class="lead"><%= link_to(@book.title, @book) %></p>
      <p class="text-info"><%= @book.cuisine %></p>
      <p class="text-info"><%= @book.chef %></p>
    </div>
    <div class="span8">
      <p class="text-warning"><%= image_tag(@book.image) %></p>
    </div>
</div>

<br>

<hr>
<h2>Comments</h2>

<div class="comment_container">
  <% @book.comments.each do |comment| %>
  <div class="row">
      <div class="span3 offset1">
        <p><strong><%= comment.name %></strong></p>
      </div>

      <div class="span6">
        <p><%= comment.body %></p>
      </div>
  </div>
  <% end %>
</div>

<%= link_to "Add a Comment", new_comment_path(book_id: @book.id), :remote => true %>

<div id="new_comment"/>
<hr>

<h2>Recipes</h2>
<% @book.recipes.each do |recipe| %>
  <div class="row">
    <div class="span3 offset1">
      <p class="lead"><%= recipe.name %></p>
      <%= image_tag(recipe.image) %>
    </div>

    <div class="span8">
      <% recipe.ingredients.each do |ingredient| %>
        <%= ingredient.name %>
        <%= image_tag(ingredient.image,  size: "40x40") %>
      <% end %>
    </div>
   </div>
<% end %>



